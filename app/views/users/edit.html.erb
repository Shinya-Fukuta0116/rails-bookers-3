<main>
    <p id="notice"></p>
      <div class="container">
          <div class="row">
            <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <% if @user.errors.any? %>
              <%= @user.errors.count %> error prohibited this obj from being saved
              <div id="error_explanation" class="alert alert-danger">
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <h2>User info</h2>
            <%= form_with model: @user do |f| %>
              <label for="user_name">Name</label>
              </br>
              <%= f.text_field :name,class:"form-control" %>
              </br>
              <label for="user_image">Image</label>
              </br>
              <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
              </br>
              <label for="user_introduction">Introduction</label>
              </br>
              <%= f.text_area :introduction, class:"form-control" %>
              </br>
              <%= f.submit "Update User", class:"btn btn-success" %>
            <% end %>
          </div>
        </div>
    </div>
</main>