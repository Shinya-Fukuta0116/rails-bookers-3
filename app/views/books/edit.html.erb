<main>
    <p id="notice"></p>
    <div class="container">
        <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <% if @book.errors.any? %>
        <div id="error_explanation" class="alert alert-danger">
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
  		    <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, autofocus: true, id:"user_name", placeholder:"Name", class:"form-control" %>
        </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, autofocus: true, id:"user_introduction", placeholder:"Introduciton", class:"form-control" %>
        </div>
        <div class="form-group">
        <%= f.submit "Upadate Book", class:"btn btn-success" %>
        </div>
      <% end %> 
  		<%= link_to 'Show', book_path %> |
  		<%= link_to 'Back', books_path %>
        </div>
        </div>
    </div>
</main>