<div class="text-success">
  <%= flash[:notice] %>
</div>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
          <%= image_tag @user.get_profile_image(200, 200) %>
            <table class="table">
              <tbody>
                <tr></tr>
                <tr></tr>
	                <th>name</th>
	                <td><%= @user.name %></td>
                <tr>
	                <th>introduction</th>
	                <td><%= @user.introduction %></td>
	                <tr></tr>
                </tr>
              </tbody>
            </table>
          <div class="row">
          <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
          </div>
        <h2 class="mt-3">New book</h2>
          <%= form_with model: @book do |f| %>
            <h5>Title</h5>
              <%= f.text_field :title %>
                </br>
              <h5>Opinion</h5>
              <%= f.text_area :body %>
                </br>
              <%= f.submit 'Create Book' %>
          <% end %>
        </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(200, 200) %>
                <br>
                <%= @user.name %>
                <% end %>
              </td>
            <td><%= link_to @bookdetail.title, book_path %></td>
            <td><%= @bookdetail.body %></td>
                <% if @bookdetail.user == current_user %>
            <td><%= link_to "Edit", edit_book_path(@bookdetail.id), class:"btn btn-sm btn-success" %></td>
            <!--what u like to delete? @bookdetail.id so that link to destroy-->
            <td><%= link_to "Destroy", book_path(@bookdetail.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" %></td>
            </tr>
                <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

