<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Bookers2Ver2</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container">
    <%= link_to "Bookers", root_path, class:"navbar-brand" %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li>
            <%= link_to user_path(current_user.id), class:"nav-link active" do %>
            <i class="fas fa-home fa-w-18"></i>
            Home
            <% end %>
          </li>
          <%= link_to users_path, class:"nav-link active" do %>
          <i class= "fas fa-users fa-w-20"></i>
          Users
          <% end %>
          <li>
            <%= link_to books_path, class:"nav-link active" do %>
            <i class="fas fa-book-open fa-w-18"></i>
            Books
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, class:"nav-link active", method: :delete do %>
            <i class= "fas fa-sign-out-alt fa-w-16"></i>
            Log out
            <% end %>
          </li>
          <% else %>
        <li class="nav-item">
          <%= link_to root_path, class:"nav-link active" do %>
          <i class="fas fa-home fa-w-18"></i>
          Home
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to about_path, class:"nav-link active" do %>
          <i class="fas fa-link fa-w-16"></i>
          About
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_user_registration_path, class:"nav-link active" do %>
          <i class="fas fa-user-plus fa-w-20"></i>
          Sign up
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to new_user_session_path, class:"nav-link active" do %>
          <i class="fas fa-sign-in-alt fa-w-16"></i>
          Log in
          <% end %>
        </li>
        <% end %>
        </li>
        </ul>
      </ul>
    </div>
  </div>
</nav>
    <div class="container">
      <div class="row">
      </br>
    <%= yield %>
    <footer class="footer navbar-fixed-bottm">
    <div class="container">
        </br>
        </br>
        <div class="d-flex justify-content-center">CopyRight Infratop.inc</div>
    </div>
</footer>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>
</html>